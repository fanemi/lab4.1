<h1>My Blog</h1>
<%@posts.each do |post|%>
	<h2><%=post.title%></h2>
	<p><%=post.content%></p>
	<small><%=post.created_at%></small>
	<%= link_to 'show', post_path(post) %>
	<%= link_to 'edit', edit_post_path(post) %>
	<%#= link_to 'destroy', post_path(post), method: :delete, data: { confirm: 'Are you sure?' } %>
<%end%>
<br/>
<%= link_to 'new', new_post_path %>